  \centering
  \begin{tabular}{lcl}
  \(A(x, q)\) & & \(B(y, q)\) \\
  \toprule

  \(r\gets \ZZ_q\)
  & \(\ProtoSendLeft{r}\)
  &
  \\

  % null
  & \(\ProtoSendRight{c}\)
  & \(c\gets \ZZ_q\)
  \\

  % null
  & \ProtoSendLeft[1em]{y}
  &
  \\

  \bottomrule
  \end{tabular}
  \caption{%
    The interactive protocol \(\Proto{A(x)}{B(y)}(q)\) between algorithm \(A\) 
    with private input \(x\) and algorithm \(B\) with private input \(y\) and 
    common input \(q\).
  }\label{ProtocolFigure}
\end{figure}
\end{verbatim}

\begin{figure}
  \centering
  \begin{tabular}{lcl}
  \(A(x, q)\) & & \(B(y, q)\) \\
  \toprule

  \(r\gets \ZZ_q\)
  & \(\ProtoSendLeft{r}\)
  &
  \\

  % null
  & \(\ProtoSendRight{c}\)
  & \(c\gets \ZZ_q\)
  \\

  % null
  & \ProtoSendLeft[1em]{y}
  &
  \\

  \bottomrule
  \end{tabular}
  \caption{%
    The interactive protocol \(\Proto{A(x)}{B(y)}(q)\) between algorithm \(A\) 
    with private input \(x\) and algorithm \(B\) with private input \(y\) and 
    common input \(q\).
